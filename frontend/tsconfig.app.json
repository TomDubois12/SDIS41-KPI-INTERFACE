{
  "compilerOptions": {
      "composite": true,
      "declaration": true,
      // "declarationMap": true, // Optionnel avec emitDeclarationOnly
      "emitDeclarationOnly": true, // <- Ajouté: Ne génère que les .d.ts
      "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "skipLibCheck": true,

      /* Bundler mode */
      "moduleResolution": "bundler",
      // "allowImportingTsExtensions": true, // Toujours pas nécessaire à priori
      "isolatedModules": true,
      "moduleDetection": "force",
      // "noEmit": false, // <- Supprimé/remplacé par emitDeclarationOnly
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "allowJs": true,

      /* Linting */
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}